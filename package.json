{
  "name": "eslint-plugin-vibecoding",
  "version": "1.0.0",
  "description": "ESLint plugin with custom rules to prevent common bad practices made by robots (and humans who code like robots)",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslint-rules",
    "vibecoding",
    "code-quality",
    "anti-robot"
  ],
  "author": "VibeCoding Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vibecoding/eslint-plugin-vibecoding.git"
  },
  "bugs": {
    "url": "https://github.com/vibecoding/eslint-plugin-vibecoding/issues"
  },
  "homepage": "https://github.com/vibecoding/eslint-plugin-vibecoding#readme",
  "engines": {
    "node": ">=18.0.0",
    "eslint": ">=8.0.0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build"
  }
}
